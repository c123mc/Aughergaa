<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="100dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/timing"
        android:layout_centerInParent="true"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_toRightOf="@+id/timing"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        >
        <ImageView
            android:layout_width="50dp"
            android:scaleType="fitXY"
            android:layout_height="50dp"
            android:visibility="gone"
            android:id="@+id/team_1_image"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/primary"
            android:id="@+id/team_name_1"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/team_1_image"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_toLeftOf="@+id/timing"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        >
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitXY"
            android:visibility="gone"
            android:id="@+id/team_2_image"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/primary"
            android:id="@+id/team_name_2"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/team_1_image"
            />
    </LinearLayout>
</RelativeLayout>